BUFFER_SIZE = 1024  # same as in C

try:
    # Open source file in binary read mode
    with open("source.txt", "rb") as source:
        # Open/create destination file in binary write mode
        with open("destination.txt", "wb") as destination:
            while True:
                buffer = source.read(BUFFER_SIZE)
                if not buffer:  # End of file
                    break
                destination.write(buffer)

    print("File copied successfully!")

except FileNotFoundError:
    print("Error: Source file not found.")
except IOError as e:
    print(f"File operation error: {e}")
